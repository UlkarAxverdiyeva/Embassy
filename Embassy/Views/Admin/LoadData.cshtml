@model Embassy.Models.ViewModels.NewsInfo


<div class="modal-header font-weight-bold font-lg">
    Update News
</div>
<div class="modal-body">
    @using (Html.BeginForm("UpdateNews", "Admin", FormMethod.Post, new { @class = "FormModal" }))
    {
        @Html.AntiForgeryToken()

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => model.newsInfo.FirstOrDefault().NEWSTITLE, new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => model.newsInfo.FirstOrDefault().NEWSCONTENT, new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    @Html.HiddenFor(model => model.newsInfo.FirstOrDefault().NEWSID)
                    @Html.HiddenFor(model => model.newsInfo.FirstOrDefault().ISARCHIVE)
                    @Html.HiddenFor(model => model.newsInfo.FirstOrDefault().ISDELETED)
                    @Html.HiddenFor(model => model.newsInfo.FirstOrDefault().DATEMODIFIED)
                    @Html.HiddenFor(model => model.newsInfo.FirstOrDefault().DATEPOSTED)
                </tr>
            </tbody>
        </table>
        <div class="modal-footer">
            <button type="button" class="btn btn-success" onclick="Update(@Model.newsInfo.FirstOrDefault().NEWSID)">Save</button>
        </div>
    }
</div>


<script>
    function Update(id) {
        $.ajax({
            data: $('.FormModal').serialize(),
            type: 'POST',
            URL: '@Url.Action("UpdateNews","Admin")',
            success: function (Message) {
                if (Message != "Fail")
                    window.location.href = "UpdateNews"
            }
        })

    }
</script>

@section JSscripts{
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>

}

@section CSSstyles{
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css' />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}